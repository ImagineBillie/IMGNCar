@page "/About"
@rendermode InteractiveServer

<PageTitle>About IMGNCar</PageTitle>

<h1 class="mb-4" style="margin-left:70px"><u>About IMGNCar</u></h1>

<!-- Main Content Section -->
<section class="default-section">
    <div class="auto-container">
        <div class="row clearfix">
            <!-- Video Column -->
            <div class="column image-column col-md-6 col-sm-12 col-xs-12">
                <article class="inner-box">
                    <figure class="image-box video-box">
                        <img src="resource/video-image-1.jpg" alt="Car Rental Process">
                        <a href="https://www.youtube.com/" class="lightbox-image video-link">
                            <div class="icon-outer"><span class="img-circle fa fa-play"></span></div>
                        </a>
                    </figure>
                </article>
            </div>

            <!-- Content Column -->
            <div class="column default-text-column with-margin col-md-6 col-sm-12 col-xs-12">
                <article class="inner-box">
                    <h2>Your Trusted <span class="text-primary">Car Rental</span> Partner</h2>
                    <div class="bigger-text">
                        Serving thousands of satisfied customers since 2015
                    </div>
                    <div class="text">
                        <p>At IMGNCar, we revolutionize car rentals through our seamless online platform. Choose from our diverse fleet of well-maintained vehicles, book in minutes, and hit the road with confidence.</p>
                    </div>
                    <ul class="styled-list-one no-margin-bottom">
                        <li>24/7 Customer Support</li>
                        <li>No Hidden Fees Guarantee</li>
                        <li>Free Cancellation Up to 24h</li>
                        <li>Digital Damage Inspection</li>
                    </ul>
                </article>
            </div>
        </div>

        <div class="row clearfix mt-5">
            <!-- Mission -->
            <div class="column default-text-column col-md-4 col-sm-6 col-xs-12">
                <div class="text-block">
                    <h3>Our Mission</h3>
                    <div class="text">
                        <p>To make car rental accessible, affordable, and effortless through innovative technology and exceptional service. We aim to be your first choice for flexible mobility solutions.</p>
                    </div>
                </div>
            </div>

            <!-- History -->
            <div class="column default-text-column col-md-4 col-sm-6 col-xs-12">
                <div class="text-block">
                    <h3>Established in <span class="text-primary">2015</span></h3>
                    <div class="text">
                        <p>Starting with 3 vehicles in London, we've grown to a fleet of 500+ cars across major UK cities. Our digital-first approach has served over 50,000 customers.</p>
                    </div>
                </div>
            </div>

            <!-- Values -->
            <div class="column default-text-column col-md-4 col-sm-6 col-xs-12">
                <div class="text-block">
                    <h3>Our Values</h3>
                    <div class="text">
                        <p>Transparency, reliability, and customer-centric innovation drive everything we do. We continuously evolve to meet changing mobility needs while maintaining competitive pricing.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Commitment Section -->
<section class="team-section py-5" style="background: #f8f9fa; border-radius:12px; margin-bottom:120px">
    <div class="auto-container">
        <div class="sec-title text-center">
            <h2>Our <span class="text-primary">Commitments</span></h2>
            <div class="text">What makes IMGNCar your ideal rental partner</div>
        </div>

        <div class="row clearfix">
            <!-- Commitment 1 -->
            <div class="col-md-3 col-sm-6 text-center mb-4">
                <div class="p-4 h-100" style="background: white; border-radius: 10px;">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h4>Safety First</h4>
                    <p>Regularly serviced vehicles with latest safety features</p>
                </div>
            </div>

            <!-- Commitment 2 -->
            <div class="col-md-3 col-sm-6 text-center mb-4">
                <div class="p-4 h-100" style="background: white; border-radius: 10px;">
                    <i class="fas fa-clock fa-3x text-primary mb-3"></i>
                    <h4>Time Savings</h4>
                    <p>Quick booking process and instant confirmation</p>
                </div>
            </div>

            <!-- Commitment 3 -->
            <div class="col-md-3 col-sm-6 text-center mb-4">
                <div class="p-4 h-100" style="background: white; border-radius: 10px;">
                    <i class="fas fa-pound-sign fa-3x text-primary mb-3"></i>
                    <h4>Best Rates</h4>
                    <p>Competitive pricing with price match guarantee</p>
                </div>
            </div>

            <!-- Commitment 4 -->
            <div class="col-md-3 col-sm-6 text-center mb-4">
                <div class="p-4 h-100" style="background: white; border-radius: 10px;">
                    <i class="fas fa-car fa-3x text-primary mb-3"></i>
                    <h4>Diverse Fleet</h4>
                    <p>From economy cars to premium vehicles</p>
                </div>
            </div>
        </div>
    </div>
</section>

